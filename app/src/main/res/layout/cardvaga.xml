<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fundo_vaga1"
    android:id="@+id/cardVaga"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="15dp">

    <ImageView
        android:id="@+id/logo_empresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_empresa"
        android:layout_marginTop="25dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="@+id/cardVaga"
        app:layout_constraintStart_toStartOf="@+id/cardVaga"
         />

    <TextView
        android:id="@+id/nome_empresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nome_empresa"
        android:layout_marginTop="37dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="@+id/cardVaga"
        app:layout_constraintStart_toEndOf="@+id/logo_empresa"
        android:textColor="@color/white"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/nomeCidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cidade"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="@+id/nome_empresa"
        app:layout_constraintStart_toEndOf="@+id/logo_empresa"
        android:textColor="@color/principal"
        />

    <TextView
        android:id="@+id/nomeVaga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nome_vaga"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@+id/logo_empresa"
        app:layout_constraintStart_toStartOf="@+id/cardVaga"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/tipoVaga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remoto"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/btn_rounded"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@+id/nomeVaga"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="@+id/cardVaga"
        android:paddingStart="22dp"
        android:paddingEnd="22dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        />

    <TextView
        android:id="@+id/tempoPostagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DataPostagem"
        android:textColor="@color/principal"
        android:textStyle="bold"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tipoVaga"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/cardVaga"
        app:layout_constraintBottom_toBottomOf="@id/cardVaga"
        android:layout_marginBottom="25dp"
        />

    <TextView
        android:id="@+id/pagamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/valor_remuneracao"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@id/cardVaga"
        app:layout_constraintBottom_toBottomOf="@id/cardVaga"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="25dp"
        />

    <ImageView
        android:id="@+id/ic_excluir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_excluir_svg"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="@+id/cardVaga"
        app:layout_constraintEnd_toEndOf="@+id/pagamento"
        />

    <ImageView
        android:id="@+id/ic_editar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_editarvaga"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/ic_excluir"
        app:layout_constraintStart_toStartOf="@+id/ic_excluir"
        />

</androidx.constraintlayout.widget.ConstraintLayout>